<Window x:Class="BasketballStatistics.UI.AddGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasketballStatistics.UI"
        mc:Ignorable="d"
        Icon="Img/basketball.ico"
        Title="Add a new game" Height="180" Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.ColumnSpan="2" FontSize="19" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Thin">Choose 2 teams to play with each other</Label>

        <StackPanel Grid.Row="1" VerticalAlignment="Top">
            <Label HorizontalAlignment="Center" FontWeight="Light" FontSize="17">Choose the first team:</Label>
            <ComboBox Margin="10 0" Name="firstTeamBox" FontSize="15">
                <ComboBoxItem IsSelected="True">Team 1</ComboBoxItem>
                <ComboBoxItem IsEnabled="False">Team 2</ComboBoxItem>
                <ComboBoxItem>Team 3</ComboBoxItem>
                <ComboBoxItem>Team 4</ComboBoxItem>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Top">
            <Label HorizontalAlignment="Center" FontWeight="Light" FontSize="17">Choose the second team:</Label>
            <ComboBox Margin="10 0" Name="secondTeamBox" FontSize="15">
                <ComboBoxItem IsEnabled="False">Team 1</ComboBoxItem>
                <ComboBoxItem IsSelected="True">Team 2</ComboBoxItem>
                <ComboBoxItem>Team 3</ComboBoxItem>
                <ComboBoxItem>Team 4</ComboBoxItem>
            </ComboBox>
        </StackPanel>

        <Button Name="btnStart" Grid.Row="2" Grid.ColumnSpan="2" FontSize="17" Padding="2" Margin="0 5" VerticalAlignment="Top" HorizontalAlignment="Center" Width="120" Background="LightCoral" Click="btnStart_Click">Start</Button>
    </Grid>
</Window>